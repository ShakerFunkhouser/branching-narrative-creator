<%= form_for @document do |f| %>
    <label>Title:</label>
    <%= f.text_field :title %>
    <label>Passage:</label>
    <%= f.text_area_field :passage %>

    <label>The Narrative this document will belong to:</label>
    <%= f.collection_select :narrative, current_user.narratives.all, :id, :title %>
    
    <%= f.submit "#{@prefix} Document" %>
<% end %>