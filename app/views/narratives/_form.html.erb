<%= form_for @narrative do |f| %>
    <label>Title:</label>
    <%= f.text_field :title %><br>
    <label>Public?</label>
    <%= f.check_box :is_public %>

    <h3>Create a New Root Document for this Narrative:</h3>
    <%= f.fields_for :root_documents, @narrative.root_documents.build do |root_documents_fields| %>
        <label>Title:</label>
        <%= root_documents_fields.text_field :title %>
        <label>Passage:</label>
        <%= root_documents_fields.text_field :passage %>
        <%= root_documents_fields.hidden_field :narrative_id, value: @narrative.id %>
    <% end %>
    <%= f.submit "#{@prefix} Narrative" %>
<% end %>