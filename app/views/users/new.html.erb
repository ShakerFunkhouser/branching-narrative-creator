<h1>Create an Account</h1>
<p>Or, sign up using <%= link_to "Github", "/auth/github" %></p>

<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @user do |f| %>
    <label>Name:</label>
    <%= f.text_field :name %><br>
    <label>Email:</label>
    <%= f.text_field :email %><br>
    <label>Password:</label>
    <%= f.password_field :password %><br>
    <label>Admin?</label>
    <%= f.check_box :admin %>

    <%= f.submit "Create Account" %>
<% end %>

<h2>Already have an account? <%= link_to "Sign in", "/signin" %> now!</h2>